{
  "compilerOptions": {
    "isolatedModules": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "lib",
    "resolveJsonModule": true
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
